<UserControl x:Class="di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios.UCArbolGrupo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios"
             mc:Ignorable="d" 
             x:Name="ucArbolGrupo"
             Loaded="ucArbolGrupo_Loaded"
             xmlns:ent="clr-namespace:di.proyecto.clase._2025.Backend.Modelos"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="ARBOLES DE GRUPOS" 
                       FontSize="25" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="20"
                       Grid.Row="0"
                       Foreground="Purple"/>
        </Grid>
        <Grid DockPanel.Dock="Left" Width="300">
            <TreeView x:Name="arbolGrupos">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type ent:Grupo}"
                                              ItemsSource="{Binding Usuarios}">
                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="Alcohol" Width="16" Foreground="MediumVioletRed"/>
                            <TextBlock Text="{Binding Nombre}" Margin="10.0.0.0"/>
                            
                        </StackPanel>
                        
                    </HierarchicalDataTemplate>

                    <HierarchicalDataTemplate DataType="{x:Type ent:Usuario}"
                                              ItemsSource="{Binding Salida}">

                        <StackPanel Orientation="Horizontal">
                            <mat:PackIcon Kind="Account" Width="16" Foreground="DarkBlue"/>

                            <TextBlock Text="{Binding Nombre}" Margin="10.0.0.0"/>
                    </HierarchicalDataTemplate>
                                             
                </TreeView.Resources>

        </Grid>
    </DockPanel>
</UserControl>
