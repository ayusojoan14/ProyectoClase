<UserControl x:Class="di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios.UCListadoModelos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.ControlUsuarios"
             x:Name="ucListadoModelos"
             Loaded="ucListadoModelos_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel
                Orientation="Horizontal"
                Grid.Row="0" >
                    <TextBlock Text="LISTADO DE MODELOS DE ARTÍCULO" 
                    FontSize="25" FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    Margin="20"
                    Grid.Row="0"
                    Foreground="Purple"/>
                </StackPanel>

                <StackPanel 
                Orientation="Horizontal"
                Grid.Row="1" >
                    <TextBlock Text="FILTROS: " 
                           VerticalAlignment="Center"
                           FontSize="16"
                           Margin="10,0,0,0"/>

                    <TextBox Width="200"
                             Margin="5,0,0,0"
                             Text="{Binding textoNombre, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             mah:TextBoxHelper.Watermark="Nombre del modelo"
                             x:Name="textoNombreModelo"
                             TextChanged="textoNombreModelo_TextChanged"/>

                    <TextBlock Text="Seleccione un tipo de articulo"
                               VerticalAlignment="Center"
                               />
                    <ComboBox 
                        Style="{StaticResource MaterialDesignComboBox}"
                        ItemsSource="{Binding listaTipoArticulos, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding Tipoarticulo, ValidatesOnDataErrors=True, NotifyOnSourceUpdated=True, NotifyOnValidationError=True}"
                        DisplayMemberPath="Nombre"
                        SelectionChanged="tipoarticulo_SelectionChanged"
                        x:Name="tipoarticulo"
                        />

                </StackPanel>

            </Grid>
        </Grid>

        <Grid>
            <DataGrid ItemsSource="{Binding listaModelosArticulos}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectedItem="{Binding modeloArticulo}"
                      CanUserAddRows="False"
                      ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NOMBRE DEL MODELO " Binding="{Binding Nombre}"/>
                    <DataGridTemplateColumn Header="MARCA - MODELO" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="{Binding Marca}" FontWeight="Bold"/>
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding Modelo}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="CANTIDAD DE ARTÍCULOS" Binding="{Binding Articulos.Count}"/>
                    <DataGridTextColumn Header="TIPO DE ARTÍCULO" Binding="{Binding TipoNavigation.Nombre}"/>
                    <DataGridTextColumn Header="DESCRIPCION" Binding="{Binding Descripcion}"/>

                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Editar Modelo de Articulo"
                                  x:Name="miEditarModeloArticulo"
                                  Click="miEditarModeloArticulo_Click">
                            <MenuItem.Icon>
                                <Image Source="/Recursos/Iconos/addarticulomvvm.png"
                                         Height="16"
                                         Margin="0,0,10,0" />
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="Borrar Modelo de Articulo"
                                  
                            x:Name="miBorrarModeloArticulo"
                                  Click="miBorrarModeloArticulo_Click">
                            <MenuItem.Icon>
                                <Image Source="/Recursos/Iconos/papeleraRoja.png"
                                         Height="16"
                                         Margin="0,0,10,0" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
