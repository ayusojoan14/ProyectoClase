<mah:MetroWindow x:Class="di.proyecto.clase._2025.Frontend_visual_.Dialogo.DialogoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend_visual_.Dialogo"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="640"
        Width="600"
        d:DesignHeight="640" d:DesignWidth="600"
        x:Name="diagModeloArticulo"
        Title="DialogoUsuario" >
    <Grid>

        <!-- RECTANGULO INICIAL -->
        <Grid Width="Auto"
              Height="100"
              Margin="0,0,0,20"
              VerticalAlignment="Top">
            <Rectangle Fill="Red"/>
            <TextBlock
                Text="INSERTAR USUARIO"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White"/>
        </Grid>
        
        
        <!-- DEFINIMOS LAS COLUMNAS -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--NOMBRE-->
            <TextBox
                x:Name="txtNombre"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Nombre*"
                FontWeight="Bold"
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,10,10,10"
                Text="{Binding usuario.Nombre,ValidatesOnDataErrors=True, 
                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"       
                />

            <!--APELLIDOS-->
            <TextBox
                x:Name="txtApellidos"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Apellidos*"
                FontWeight="Bold"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,10,10,10"
                Text="{Binding usuario.Apellidos,ValidatesOnDataErrors=True, 
                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"       
                />

            <!--EMAIL-->

            <TextBox
                x:Name="txtEmail"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Email*"
                FontWeight="Bold"
                Grid.Row="2"
                Grid.Column="0"
                Margin="10,10,10,10"
                Text="{Binding usuario.Email,ValidatesOnDataErrors=True, 
                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"       
                />



        </Grid>
        
        
    </Grid>
</mah:MetroWindow> 
