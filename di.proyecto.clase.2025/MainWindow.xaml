<Fluent:RibbonWindow x:Class="di.proyecto.clase._2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:di.proyecto.clase._2025"
        xmlns:mah="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Fluent="urn:fluent-ribbon"
                     mc:Ignorable="d"
                     WindowState="Maximized"
TitleBarHeight="40"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>

            <!-- RIBBON -->
            <Fluent:Ribbon DockPanel.Dock="Top">
                <Fluent:RibbonTabItem Header="PRESTAMOS" IsSelected="True">

                    <!-- Operaciones -->
                    <Fluent:RibbonGroupBox
                        x:Name="ClipboardOperaciones"
                        Header="Operaciones"
                        Margin="5">

                        <Fluent:Button
                            Header="Lista Articulo"
                            LargeIcon="/Recursos/Iconos/salida.png"
                            Click="UCArticulo_Click"
                            Margin="0,0,10,0"/>

                        <Fluent:Button
                            Header="Lista Modelo Articulo"
                            LargeIcon="/Recursos/Iconos/devolucion.png"
                            Click="UCModelo_Click"/>
                        <Fluent:Button
                            Header="Usuarios"
                            LargeIcon="/Recursos/Iconos/devolucion.png"
                            Click="UCUsuario_Click"/>
                    </Fluent:RibbonGroupBox>

                    <!-- Búsquedas -->
                    <Fluent:RibbonGroupBox
                        x:Name="ClipboardBusquedas"
                        Header="Búsquedas"
                        Margin="5">

                        <TextBlock
                            Text="Por número de serie"
                            FontSize="14"
                            FontWeight="Bold"
                            Margin="10"/>

                        <TextBox
                            Margin="5,0"
                            BorderBrush="LightGray"
                            BorderThickness="1"/>
                    </Fluent:RibbonGroupBox>

                    <!-- Modelo Artículo -->
                    <Fluent:RibbonGroupBox
                        x:Name="AddListaModeloArticulo"
                        Header="Modelo Artículo"
                        Margin="5">

                        <Fluent:Button
                            x:Name="btnAddModeloArticulo"
                            Header="ModeloArticulo"
                            LargeIcon="/Recursos/Iconos/listamodelos.png"
                            Foreground="DarkOrange"
                            Margin="0,0,10,0"
                            Click="btnAddModeloArticulo_Click"/>
                    </Fluent:RibbonGroupBox>

                    <!-- Artículo -->
                    <Fluent:RibbonGroupBox
                        x:Name="AddListaArticulo"
                        Header="Artículo"
                        Margin="5">

                        <Fluent:Button
                            x:Name="btnAddArticulo"
                            Header="Artículo"
                            LargeIcon="/Recursos/Iconos/articulo.png"
                            Foreground="DarkOrange"
                            Margin="0,0,10,0"
                            Click="btnAddArticulo_Click"/>
                    </Fluent:RibbonGroupBox>

                    <!-- Usuario -->
                    <Fluent:RibbonGroupBox
                        x:Name="AddUsuario"
                        Header="Usuario"
                        Margin="5">

                        <Fluent:Button
                            x:Name="btnAddUsuario"
                            Header="Usuario"
                            LargeIcon="/Recursos/Iconos/articulo.png"
                            Foreground="DarkOrange"
                            Margin="0,0,10,0"
                            Click="btnAddUsuario_Click"/>
                    </Fluent:RibbonGroupBox>

                </Fluent:RibbonTabItem>
            </Fluent:Ribbon>

            <!-- CONTENIDO PRINCIPAL -->
            <Grid x:Name="panelPrincipal">
                <TextBlock
                    Text="BIENVENIDO AL SISTEMA DE GESTIÓN DE PRÉSTAMOS DE ARTÍCULOS"
                    FontSize="10"
                    FontWeight="Bold"
                    Foreground="Gray"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            </Grid>

        </DockPanel>
    </Grid>
</Fluent:RibbonWindow>
